/dts-v1/;
/plugin/;

/ {
  compatible = "brcm,bcm2835", "brcm,bcm2836", "brcm,bcm2708", "brcm,bcm2709";

  fragment@0 {
    target = <&gpio>;
    __overlay__ {
      spi0_pins: spi0_pins {
        brcm,pins = <9 10 11>;
        brcm,function = <4>; /* SPI function */
      };

      spi0_cs_pins: spi0_cs_pins {
        brcm,pins = <7 8>;
        brcm,function = <1>; /* output */
      };

      spi1_pins: spi1_pins {
        brcm,pins = <19 20 21>;
        brcm,function = <3>; /* SPI function */
      };

      spi1_cs_pins: spi1_cs_pins {
        brcm,pins = <18 17>;
        brcm,function = <1>; /* output */
      };

      mcp2517fd_int_pins: mcp2517fd_int_pins {
        brcm,pins = <4 2 13 6>;
        brcm,function = <0>; /* input */
      };
    };
  };

  fragment@1 {
    target = <&spi>;
    __overlay__ {
      #address-cells = <1>;
      #size-cells = <0>;
      pinctrl-names = "default";
      pinctrl-0 = <&spi0_pins &spi0_cs_pins>;
      cs-gpios = <&gpio 7 1>, <&gpio 8 1>;
      status = "okay";

      can0: can@0 {
        compatible = "microchip,mcp2517fd";
        reg = <0>;
        clocks = <&mcp2517fd_osc>;
        spi-max-frequency = <10000000>;
        interrupt-parent = <&gpio>;
        interrupts = <4 0x8>;
      };

      can1: can@1 {
        compatible = "microchip,mcp2517fd";
        reg = <1>;
        clocks = <&mcp2517fd_osc>;
        spi-max-frequency = <10000000>;
        interrupt-parent = <&gpio>;
        interrupts = <2 0x8>;
      };
    };
  };

  fragment@2 {
    target = <&spi1>;
    __overlay__ {
      #address-cells = <1>;
      #size-cells = <0>;
      pinctrl-names = "default";
      pinctrl-0 = <&spi1_pins &spi1_cs_pins>;
      cs-gpios = <&gpio 18 1>, <&gpio 17 1>;
      status = "okay";

      can2: can@0 {
        compatible = "microchip,mcp2517fd";
        reg = <0>;
        clocks = <&mcp2517fd_osc>;
        spi-max-frequency = <10000000>;
        interrupt-parent = <&gpio>;
        interrupts = <13 0x8>;
      };

      can3: can@1 {
        compatible = "microchip,mcp2517fd";
        reg = <1>;
        clocks = <&mcp2517fd_osc>;
        spi-max-frequency = <10000000>;
        interrupt-parent = <&gpio>;
        interrupts = <6 0x8>;
      };
    };
  };


  fragment@3 {
    target-path = "/clocks";
    __overlay__ {
      mcp2517fd_osc: mcp2517fd_osc {
        compatible = "fixed-clock";
        #clock-cells = <0>;
        clock-frequency  = <20000000>;
      };
    };
  };

  fragment@4 {
    target = <&i2c1>;
    __overlay__ {
      /* disable i2c as SDA is used for CAN1 IRQ */
      status = "disabled";
    };
  };
};
